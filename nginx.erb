server {
    listen 80;
    client_max_body_size 1m;
    server_name eal.angrygoats.net;

    location /api/ { 
        try_files $uri @yourapplication;
    }

    location / { 
        alias /vagrant/html;
    }
    location @yourapplication {
        include uwsgi_params;
        uwsgi_pass 127.0.0.1:8888;
    }
}
